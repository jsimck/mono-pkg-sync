{
  "include": ["./src/**/*", "./bin"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
  }
}
