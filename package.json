  "main": "index.js",
  "type": "module",
  "bin": {
    "sync-packages": "./bin/sync.js"
  },
  "author": "Jan Šimeček",
  "license": "MIT",
  "homepage": "https://github.com/jsimck/sync-packages",
  "bugs": {
    "url": "https://github.com/jsimck/sync-packages/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsimck/sync-packages"
  },
  "scripts": {
